        <van-checkbox value="{{ agreementChecked }}" shape="square" icon-size="32rpx" bind:change="onAgreementChange">
          <text class="agreement-text">已阅读并同意</text>
          <text class="agreement-text">《授权协议》</text>
        </van-checkbox>
      </view> -->
      <view class="foot-operations">
        <van-button type="primary" block bindtap="checkWhiteList">确定</van-button>
      </view>
    </view>
  </view>

  <view class="launchScreen" wx:if="{{launchScreen}}">
     <view class="main">
       加载中...
     </view>
  </view>


  <van-toast id="van-toast" />
</view>