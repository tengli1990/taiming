<view class="user-login">
  <view class="middle-box fill-manual" >
    <view class="content">
      <van-field title-width="4em" model:value="{{ mobile }}" clearable label="手机号码" placeholder="请输入手机号码" use-button-slot>
        <van-button slot="button" size="small" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">
          授权手机号
        </van-button>
      </van-field>
      <van-field title-width="4em" model:value="{{ sms }}" center clearable label="验证码" placeholder="请输入验证码" use-button-slot>
        <van-button slot="button" size="small" type="primary" disabled="{{isSending}}" bindtap="sendCode">{{isSending?countDown+'s重新发送':"发送验证码"}}</van-button>
      </van-field>
