.filter-list .item {
  display: flex;
  padding: 24rpx 32rpx;
  align-items: start;
  border-bottom: 1rpx solid rgba(206, 206, 206, 0.3);
}
.filter-list .item .title {
  min-width: 4.5em;
  font-size: 32rpx;
  padding: 12rpx 0;
}
.filter-list .item .content {
  flex: 1;
}
.filter-list .item .form-select {
  padding: 12rpx 0;
  display: flex;
}
.filter-list .item .form-select .placeholder {
  flex: 1;
  color: #ccc;
  font-size: 28rpx;
}
.filter-list .item .form-radio {
  display: flex;
  flex-wrap: wrap;
  margin-left: -32rpx;
  margin-top: -32rpx;
}
.filter-list .item .form-radio .tag {
  min-width: 100rpx;
  padding: 0 24rpx;
  text-align: center;
  border: 1rpx solid #f2f2f2;
  border-radius: 100rpx;
  line-height: 60rpx;
  margin-left: 32rpx;
  margin-top: 32rpx;
}
.filter-operation {
  margin-top: 50rpx;
  padding: 0 32rpx;
}
