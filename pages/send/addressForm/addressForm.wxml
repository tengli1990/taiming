<view class="send-index">
  <md-layout footerFixed>
    <view class="form">
      <van-field value="" label="收货人" placeholder="请填写收货人姓名" use-button-slot>
        <view slot="button">通讯录</view>
      </van-field>
      <van-field value="" label="手机号码" type="number" maxlength="11" placeholder="请填写收货人手机号"></van-field>
      <van-field value="" label="所在地区" readonly placeholder="省,市,区,乡镇" use-button-slot bind:tap="openPlacePopup">
        <view slot="button">定位</view>
      </van-field>
      <van-field value="" label="详细地址" placeholder="街道楼牌号等"></van-field>
      <van-field value="" label="工作单位" placeholder="请填写单位名称"></van-field>
      <van-cell title="是否设为默认">
        <van-switch checked="{{ checked }}" size="48rpx" />
      </van-cell>
    </view>
    <view slot="footer">
      <van-button type="primary" block>保存并使用</van-button>
    </view>
  </md-layout>
  <van-popup show="{{ showPlacePopup }}" position="bottom" bind:close="closePlacePopup">
    <van-area area-list="{{ areaList }}" value="110101" />
  </van-popup>
</view>