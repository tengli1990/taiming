<view class="send-index">
  <md-layout footerFixed>
    <view class="form">
      <van-field model:value="{{contact}}" label="收货人" placeholder="请填写收货人姓名" use-button-slot>
        <view slot="button" bindtap="callMailList">
          <van-icon name="friends" size="33rpx" />
          通讯录
        </view>
      </van-field>
      <van-field model:value="{{tel}}" label="手机号码" type="number" maxlength="11" placeholder="请填写收货人手机号"></van-field>
      <van-field model:value="{{area}}" label="所在地区" readonly placeholder="省,市,区" use-button-slot bind:tap="openPlacePopup">
        <view slot="button">
          <van-icon name="location" size="33rpx" />
          定位
        </view>
      </van-field>
      <van-field model:value="{{address}}" label="详细地址" placeholder="街道楼牌号等"></van-field>
      <!-- <van-field value="" label="工作单位" placeholder="请填写单位名称"></van-field> -->
      <van-cell title="是否设为默认">
        <van-switch checked="{{ submitParams.is_default }}" bind:change="setDefaultChange" size="48rpx" />
      </van-cell>
    </view>
    <view slot="footer">
      <van-button type="primary" block bindtap="saveFn">保存并使用</van-button>
    </view>
  </md-layout>
  <van-popup show="{{ showPlacePopup }}" position="bottom" bind:close="closePlacePopup">
    <van-area area-list="{{ areaList }}" title="选择地区" value="" bind:confirm="selectedArea" />
  </van-popup>
  <van-toast id="van-toast" />
  <van-dialog id="van-dialog" />
</view>